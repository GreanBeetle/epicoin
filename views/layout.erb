<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/css/bootstrap.css" type="text/css">
    <link rel="stylesheet" href="/css/styles.css" type="text/css">
    <link href="/css/multiple.css" rel="stylesheet">
    <script type="text/javascript" src="/js/jquery-3.2.1.js"></script>
    <script type="text/javascript" src="/js/scripts.js"></script>
    <script type="text/javascript" src="/js/multiple.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" src="js/typeit.min.js"></script>
    <script src="/js/terminal.js"></script>
    <script>
       $( function() {
         $( ".draggable" ).draggable({
           containment: "window"
         });
       } );
    </script>
    <meta charset="utf-8">
    <title>BASECHAIN</title>
  </head>
  <body>
    <div class="container-fluid">

      <p class="logo">EPICOIN</p>
<!-- TERMINAL -->
    <div class="terminal">
      <script>
        var epiTerminal = new Terminal()
        epiTerminal.setHeight("200px")
        epiTerminal.setWidth('600px')
        epiTerminal.blinkingCursor(true)
        document.body.appendChild(epiTerminal.html)
        epiTerminal.print("Hey, hey.")
        epiTerminal.input("What's your name?", function (input) {
          epiTerminal.print("Hi, " + input)
        })
      </script>
    </div>


      <!-- SCRAP CODE. DO NOT KEEP. -->
      <ul id="myList">
        <li>Coffee</li>
        <li>Tea</li>
      </ul>

      <p>Click the button to append an item to the end of the list.</p>

      <button onclick="myFunction()">Try it</button>

      <script>
      function myFunction() {
        var node = document.createElement("LI");
        var textnode = document.createTextNode("Water");
        node.appendChild(textnode);
        document.getElementById("myList").appendChild(node);
      }
      </script>
      <!-- SCRAP CODE END -->

      
<!-- TERMINAL END -->

      <!-- <div class="dolphin">
        <img id="dolphin-trippy" src="img/dolphintrippy.gif">
        <img id="dolphin" src="img/dolphin.gif">
      </div> -->

      <%= yield %>
      <!--  -->
      <div class="big-text">
        <div class="letter draggable" id="b"><p>B</p></div>
        <div class="letter draggable" id="a"><p>A</p></div>
        <div class="letter draggable" id="s"><p>S</p></div>
        <div class="letter draggable" id="e"><p>E</p></div>
        <div class="letter draggable" id="c"><p>C</p></div>
        <div class="letter draggable" id="h"><p>H</p></div>
        <div class="letter draggable" id="a2"><p>A</p></div>
        <div class="letter draggable" id="i"><p>I</p></div>
        <div class="letter draggable" id="n"><p>N</p></div>
      </div>

    </div>

    <script>
      (function() {
        var multiple = new Multiple({
          selector: '.letter.draggable',
          background: 'linear-gradient(315deg, #fff 20%, #f00e0f 65%)',
          affectText: '#fff'
        });
        new TypeIt('.logo', {
          strings: ["GRAPHIC", "GUI"],
          speed: 1000,
          breakLines: false
        });
      }());
    </script>
  </body>
</html>
